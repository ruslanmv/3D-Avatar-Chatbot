{
  "name": "3d-avatar-chatbot",
  "version": "2.0.0",
  "description": "Production-ready 3D Avatar Chatbot with OpenAI integration, Speech-to-Text, and Text-to-Speech capabilities - A lightweight, commercial-grade AI conversation platform",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "start": "node nexus-proxy/server.js",
    "dev": "node nexus-proxy/server.js",
    "dev:watch": "node --watch nexus-proxy/server.js",

    "build": "echo 'Static site served by nexus-proxy (no bundle step)'",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2",

    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint js/**/*.js --fix",
    "lint:check": "ESLINT_USE_FLAT_CONFIG=false eslint js/**/*.js",
    "format": "prettier --write \"**/*.{js,json,css,html,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,css,html,md}\"",
    "validate": "npm run lint:check && npm run format:check && npm run test:ci",
    "clean": "rm -rf dist coverage node_modules",

    "docs": "jsdoc -c jsdoc.json",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",

    "prepare": "(command -v git >/dev/null 2>&1 && husky install) || true",
    "precommit": "lint-staged",

    "deploy": "npm run build && npm run deploy:gh-pages",
    "deploy:gh-pages": "gh-pages -d .",
    "deploy:netlify": "netlify deploy --prod",
    "bundle:analyze": "webpack-bundle-analyzer stats.json"
  },
  "keywords": [
    "3d-avatar",
    "chatbot",
    "openai",
    "gpt-4",
    "speech-recognition",
    "text-to-speech",
    "threejs",
    "ai-assistant",
    "voice-interface",
    "conversation-ai",
    "enterprise",
    "production-ready",
    "commercial"
  ],
  "author": {
    "name": "Ruslan Magana",
    "url": "https://ruslanmv.com",
    "email": "contact@ruslanmv.com"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ruslanmv/3D-Avatar-Chatbot.git"
  },
  "bugs": {
    "url": "https://github.com/ruslanmv/3D-Avatar-Chatbot/issues"
  },
  "homepage": "https://github.com/ruslanmv/3D-Avatar-Chatbot#readme",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsdoc": "^46.8.0",
    "gh-pages": "^6.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdoc": "^4.0.2",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.3",
    "vercel": "^50.0.1",
    "webpack-bundle-analyzer": "^4.9.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,html,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "js/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all",
    "last 2 versions"
  ]
}
