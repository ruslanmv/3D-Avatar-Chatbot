{
  "name": "nexus-proxy",
  "version": "1.1.0",
  "private": true,
  "type": "module",
  "description": "Nexus Proxy Server - serves frontend and securely proxies AI provider requests (OpenAI, Claude, WatsonX)",
  "main": "server.js",
  "scripts": {
